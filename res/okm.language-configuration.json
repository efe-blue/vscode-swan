{
    "comments": {
        "lineComment": "//",
        "blockComment": ["/*", "*/"]        
    },
    "brackets": [
        ["<!--", "-->"],
        ["/*", "*/"],
        ["[", "]"],
        ["{", "}"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}"},
        { "open": "{{", "close": "}}"},
        { "open": "[", "close": "]"},
        { "open": "(", "close": ")" },
        { "open": "'", "close": "'" },
        { "open": "\"", "close": "\"" },
        { "open": "/*", "close": "*/" },
        { "open": "<", "close": ">" },
        { "open": "<!--", "close": "-->" }
    ],
    "surroundingPairs": [
        { "open": "'", "close": "'" },
        { "open": "\"", "close": "\"" },
        { "open": "{", "close": "}"},
        { "open": "{{", "close": "}}"},
        { "open": "[", "close": "]"},
        { "open": "(", "close": ")" },
        { "open": "<", "close": ">" }
    ],
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}